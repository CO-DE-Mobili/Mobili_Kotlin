              app:layout_constraintStart_toEndOf="@+id/imageView2"
              android:layout_marginStart="40dp"
              app:layout_constraintEnd_toStartOf="@+id/texto_funcionamento_propaganda" app:layout_constraintHorizontal_bias="0.0"
              android:layout_marginEnd="10dp"
              android:id="@+id/titulo_funcionamento_propaganda"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Dogão do Romero"
              android:textColor="@color/branco"
              android:textSize="30dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/texto_nome_propaganda"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="188dp"
              android:layout_marginEnd="420dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Dogão do Romero"
              android:textColor="@color/branco"
              android:textSize="30dp" android:id="@+id/texto_descricao_propaganda"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="384dp"
              app:layout_constraintTop_toBottomOf="@+id/texto_nome_propaganda" android:layout_marginTop="82dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Dogão do Romero"
              android:textColor="@color/branco"
              android:textSize="30dp" android:id="@+id/texto_localizacao_propaganda"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="360dp"
              app:layout_constraintTop_toBottomOf="@+id/texto_descricao_propaganda" android:layout_marginTop="82dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Dogão do Romero"
              android:textColor="@color/branco"
              android:textSize="30dp" android:id="@+id/texto_funcionamento_propaganda"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="152dp"
              app:layout_constraintTop_toBottomOf="@+id/texto_localizacao_propaganda" android:layout_marginTop="92dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Nome:"
              android:textColor="@color/branco"
              android:textSize="30dp" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@+id/imageView2" app:layout_constraintEnd_toStartOf="@+id/texto_nome_propaganda"
              android:layout_marginTop="188dp" app:layout_constraintHorizontal_bias="0.0"
              android:id="@+id/titulo_nome_propaganda" android:layout_marginEnd="10dp" android:layout_marginStart="40dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Localização"
              android:textColor="@color/branco"
              android:textSize="30dp" app:layout_constraintTop_toBottomOf="@+id/titulo_descricao_propaganda"
              android:layout_marginTop="82dp" android:id="@+id/titulo_localizacao_propaganda"
              app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="40dp"
              app:layout_constraintEnd_toStartOf="@+id/texto_localizacao_propaganda" app:layout_constraintHorizontal_bias="0.0"
              android:layout_marginEnd="10dp"/>


