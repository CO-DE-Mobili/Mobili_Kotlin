<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_marinho"
    tools:context=".views.InformacoesPropagandaFragment"
>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/propaganda" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.501"/>

    <TextView android:id="@+id/texto_descricao_propaganda"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="80dp"
              android:layout_marginEnd="300dp" android:maxLength="20"
              android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
              android:textColor="@color/branco"
              android:textSize="30dp" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/texto_nome_propaganda"/>
    <TextView android:id="@+id/texto_funcionamento_propaganda"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="100dp"
              android:layout_marginEnd="88dp" android:maxLength="20"
              android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
              android:textColor="@color/branco"
              android:textSize="30dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/texto_localizacao_propaganda"/>
    <TextView android:id="@+id/texto_nome_propaganda"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="184dp"
              android:layout_marginEnd="368dp" android:maxLength="20"
              android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
              android:textColor="@color/branco" android:textSize="30dp"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <TextView android:id="@+id/titulo_funcionamento_propaganda"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="40dp"
              android:layout_marginTop="100dp"
              android:layout_marginEnd="10dp"
              android:text="Horario de Funcionamento:"
              android:textColor="@color/branco"
              android:textSize="30dp"
              app:layout_constraintEnd_toStartOf="@+id/texto_funcionamento_propaganda"
              app:layout_constraintHorizontal_bias="0.8"
              app:layout_constraintStart_toEndOf="@+id/imageView2"
              app:layout_constraintTop_toBottomOf="@+id/titulo_localizacao_propaganda"/>
    <TextView android:id="@+id/titulo_localizacao_propaganda"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="40dp"
              android:layout_marginTop="88dp" android:layout_marginEnd="10dp"
              android:text="Localização:" android:textColor="@color/branco"
              android:textSize="30dp" app:layout_constraintEnd_toStartOf="@+id/texto_localizacao_propaganda"
              app:layout_constraintHorizontal_bias="0.666"
              app:layout_constraintStart_toEndOf="@+id/imageView2"
              app:layout_constraintTop_toBottomOf="@+id/titulo_descricao_propaganda"/>
    <TextView android:id="@+id/titulo_descricao_propaganda"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="40dp"
              android:layout_marginTop="80dp" android:layout_marginEnd="10dp"
              android:text="Descrição:" android:textColor="@color/branco"
              android:textSize="30dp" app:layout_constraintEnd_toStartOf="@+id/texto_descricao_propaganda"
              app:layout_constraintHorizontal_bias="0.571"
              app:layout_constraintStart_toEndOf="@+id/imageView2"
              app:layout_constraintTop_toBottomOf="@+id/titulo_nome_propaganda"/>
    <TextView android:id="@+id/titulo_nome_propaganda"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="40dp"
              android:layout_marginTop="184dp" android:layout_marginEnd="10dp"
              android:maxLength="8"
              android:text="Nome:"
              android:textColor="@color/branco" android:textSize="30dp"
              app:layout_constraintEnd_toStartOf="@+id/texto_nome_propaganda" app:layout_constraintHorizontal_bias="1.0"
              app:layout_constraintStart_toEndOf="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"/>
    <TextView android:id="@+id/texto_localizacao_propaganda"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="88dp"
              android:layout_marginEnd="8dp" android:maxLength="50"
              android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
              android:textColor="@color/branco"
              android:textSize="30dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/texto_descricao_propaganda"/>
    <Button
        android:id="@+id/rotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:backgroundTint="@color/verde" android:text="Rotas"
        android:textColor="@color/azul_marinho" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.852"/>


</androidx.constraintlayout.widget.ConstraintLayout>