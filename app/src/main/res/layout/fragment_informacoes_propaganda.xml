<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_marinho"
    tools:context=".views.InformacoesPropagandaFragment"
>
    <LinearLayout
        android:layout_margin="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_marginRight="30dp"
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/propaganda" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.053" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.501"/>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        >

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            >

                <TextView android:id="@+id/titulo_nome_propaganda"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:maxLength="8"
                          android:text="Nome:"
                          android:layout_marginRight="15dp"
                          android:textColor="@color/branco" android:textSize="30dp"
                          app:layout_constraintEnd_toStartOf="@+id/texto_nome_propaganda"
                          app:layout_constraintHorizontal_bias="1.0"
                          app:layout_constraintStart_toEndOf="@+id/imageView2"
                          app:layout_constraintTop_toTopOf="parent"/>

                <TextView android:id="@+id/texto_nome_propaganda"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:maxLength="20"
                          android:text="McDonalds"
                          android:textColor="@color/branco" android:textSize="30dp"
                          app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            >

                <TextView
                    android:layout_marginRight="15dp" android:id="@+id/titulo_descricao_propaganda"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Descrição:" android:textColor="@color/branco"
                          android:textSize="30dp" app:layout_constraintEnd_toStartOf="@+id/texto_descricao_propaganda"
                          app:layout_constraintHorizontal_bias="0.571"
                          app:layout_constraintStart_toEndOf="@+id/imageView2"
                          app:layout_constraintTop_toBottomOf="@+id/titulo_nome_propaganda"/>

                <TextView android:id="@+id/texto_descricao_propaganda"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:maxLength="20"
                          android:text="Casquinha em Oferta!! "
                          android:textColor="@color/branco"
                          android:textSize="30dp" app:layout_constraintEnd_toEndOf="parent"
                          app:layout_constraintTop_toBottomOf="@+id/texto_nome_propaganda"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            >

                <TextView
                    android:layout_marginRight="15dp" android:id="@+id/titulo_localizacao_propaganda"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Localização:" android:textColor="@color/branco"
                          android:textSize="30dp"
                          app:layout_constraintStart_toEndOf="@+id/imageView2"
                          app:layout_constraintTop_toBottomOf="@+id/titulo_descricao_propaganda"/>

                <TextView android:id="@+id/texto_localizacao_propaganda"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:maxLength="50"
                          android:text="Rua Senador Roberto simonsen, 300 "
                          android:textColor="@color/branco"
                          android:textSize="30dp"
                          app:layout_constraintEnd_toEndOf="parent"
                          app:layout_constraintStart_toEndOf="@+id/titulo_localizacao_propaganda"
                          app:layout_constraintTop_toBottomOf="@+id/texto_descricao_propaganda"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            >

                <TextView
                    android:layout_marginRight="15dp" android:id="@+id/titulo_funcionamento_propaganda"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Horario de Funcionamento:"
                          android:textColor="@color/branco"
                          android:textSize="30dp"
                          app:layout_constraintEnd_toStartOf="@+id/texto_funcionamento_propaganda"
                          app:layout_constraintHorizontal_bias="0.8"
                          app:layout_constraintStart_toEndOf="@+id/imageView2"
                          app:layout_constraintTop_toBottomOf="@+id/titulo_localizacao_propaganda"/>

                <TextView android:id="@+id/texto_funcionamento_propaganda"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:maxLength="20"
                          android:text="09:00 as 18:00 "
                          android:textColor="@color/branco"
                          android:textSize="30dp"
                          app:layout_constraintEnd_toEndOf="parent"
                          app:layout_constraintTop_toBottomOf="@+id/texto_localizacao_propaganda"/>

            </LinearLayout>

            <Button
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/rotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/verde" android:text="Rotas"
                android:textColor="@color/azul_marinho" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>


        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>