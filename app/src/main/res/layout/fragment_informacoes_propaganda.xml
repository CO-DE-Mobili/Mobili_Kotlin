<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.InformacoesPropagandaFragment"
        android:background="@color/azul_marinho"
>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/propaganda"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.501" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.053" android:id="@+id/imageView2"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Descrição:"
              android:textColor="@color/branco"
              android:textSize="30dp" android:id="@+id/titulo_descricao_propaganda"
              app:layout_constraintTop_toBottomOf="@+id/titulo_nome_propaganda" android:layout_marginTop="82dp"
